global ^

import "macros" as $

const bags =
	[$BAG_NONE]: {}
	[$BAG_TETROMINOES]:
		* $PIECE_I
		* $PIECE_O
		* $PIECE_T
		* $PIECE_J
		* $PIECE_L
		* $PIECE_S
		* $PIECE_Z
--

export bag_get = (index) =>
	if "number" == type @
		return bags[@][index]
	return @[index]

export bag_size = =>
	if "number" == type @
		return #bags[@]
	return #@

export bag_foreach = (func) =>
	if "number" == type @
		return for i in *bags[@] do func i
	return for i in *@ do func i